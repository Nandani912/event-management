<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <%= form_with model: @event do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter event name" %>
        </div>
        <div class="form-group">
          <%= f.label :date, class: "form-label" %>
          <%= f.date_select :date,  { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.label :location, class: "form-label" %>
          <%= f.text_field :location, class: "form-control", placeholder: "Enter location" %>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: 3 %>
        </div>
        <div>
          <%= f.submit "submit", class: "btn purple-bg" %>
        </div>
      <% end %>
      <%= button_to "Back", "/events", method: :get, class:"btn purple-bg" %>
    </div>
  </div>
</div>
